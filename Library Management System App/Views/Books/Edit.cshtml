@model Library_Management_System_App.Models.Book

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Update Book</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" class="row g-3">
                        <input type="hidden" asp-for="Id" />

                        <!-- Title -->
                        <div class="col-md-6 form-floating">
                            <input asp-for="Title" class="form-control" placeholder="Book Title" />
                            <label asp-for="Title"></label>
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <!-- Author -->
                        <div class="col-md-6 form-floating">
                            <input asp-for="Author" class="form-control" placeholder="Author Name" />
                            <label asp-for="Author"></label>
                            <span asp-validation-for="Author" class="text-danger small"></span>
                        </div>

                        <!-- ISBN -->
                        <div class="col-md-6 form-floating">
                            <input asp-for="ISBN" class="form-control" placeholder="ISBN Number" />
                            <label asp-for="ISBN"></label>
                            <span asp-validation-for="ISBN" class="text-danger small"></span>
                        </div>

                        <!-- Quantity -->
                        <div class="col-md-6 form-floating">
                            <input asp-for="Quantity" type="number" class="form-control" placeholder="Quantity" />
                            <label asp-for="Quantity"></label>
                            <span asp-validation-for="Quantity" class="text-danger small"></span>
                        </div>

                        <!-- Published Date -->
                        <div class="col-md-6 form-floating">
                            <input asp-for="PublishedDate" type="date" class="form-control" placeholder="Published Date" />
                            <label asp-for="PublishedDate"></label>
                        </div>

                        <!-- Actions -->
                        <div class="col-12 d-flex justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 me-2 shadow-sm">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-5 fw-semibold shadow-sm">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
