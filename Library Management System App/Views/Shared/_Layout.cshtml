<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library_Management_System_App</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link id="themeStylesheet" rel="stylesheet" href="~/css/bootswatchlux.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dark-mode.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Library_Management_System_App.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light d-lg-none shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand ms-2 fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    Library<span class="text-primary">MS</span>
                </a>
                <button class="btn btn-outline-primary" type="button" id="sidebarToggle">
                    <i class="bi bi-list fs-4"></i>
                </button>
            </div>
        </nav>

        <nav id="sidebar" class="navbar navbar-light flex-column position-fixed top-0 start-0 vh-100 shadow p-3 sidebar">
            <!-- Logo -->
            <a class="navbar-brand mb-4 text-center" asp-area="" asp-controller="Home" asp-action="Index">
                <span class="logo-emblem" role="img" aria-hidden="true">
                    <svg width="64" height="64" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
                        <rect x="6" y="10" width="52" height="44" rx="8" fill="#158cba" />
                        <rect x="12" y="14" width="12" height="34" rx="2" fill="rgba(255,255,255,0.9)" />
                        <rect x="28" y="14" width="10" height="34" rx="2" fill="rgba(255,255,255,0.75)" />
                        <rect x="42" y="14" width="8" height="34" rx="2" fill="rgba(255,255,255,0.55)" />
                    </svg>
                </span>
                <div class="fw-bold mt-2 fs-4">Library<span class="text-primary">MS</span></div>
            </a>

            <!-- Navigation Links -->
            <ul class="navbar-nav flex-column w-100 mt-3">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center nav-menu-item" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door-fill me-3 fs-5"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center nav-menu-item" asp-area="" asp-controller="Books" asp-action="Index">
                        <i class="bi bi-book-fill me-3 fs-5"></i>
                        <span>Books</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center nav-menu-item" asp-area="" asp-controller="BorrowRecord" asp-action="Index">
                        <i class="bi bi-journal-check me-3 fs-5"></i>
                        <span>Borrow Records</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center nav-menu-item" asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i class="bi bi-shield-check me-3 fs-5"></i>
                        <span>Privacy</span>
                    </a>
                </li>
            </ul>

            <!-- Bottom Section -->
            <div class="mt-auto w-100 text-center">
                <div class="login-section mb-3">
                    <partial name="_LoginPartial" />
                </div>
                <button id="themeToggle" class="btn btn-outline-primary btn-sm w-100 rounded-pill">
                    <i class="bi bi-moon-stars me-1"></i> Toggle Theme
                </button>

            </div>
        </nav>

    </header>


    <div class="container flex-fill">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <input type="hidden" id="toastr-success" value="@TempData["success"]" />
    <input type="hidden" id="toastr-error" value="@TempData["error"]" />
    <input type="hidden" id="toastr-info" value="@TempData["info"]" />
    <input type="hidden" id="toastr-warning" value="@TempData["warning"]" />

    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2025 - Library Management System
        </div>
    </footer>

    <!-- jQuery first -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap bundle -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables core -->
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

    <!-- Buttons extension (must match version) -->
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.bootstrap5.min.js"></script>

    <!-- Buttons extras if needed -->
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.colVis.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>

    <!-- Toastr -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!-- Your custom scripts -->
    <script src="~/js/toast-notifications.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/theme-toggle.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.getElementById('sidebarToggle').addEventListener('click', function () {
            document.getElementById('sidebar').classList.toggle('active');
        });
    </script>

</body>
</html>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
          icon: 'success',
          title: 'Success',
          text: '@TempData["SuccessMessage"]',
          confirmButtonColor: '#158cba'
        });
    </script>
}

@if (TempData["DeleteMessage"] != null)
{
    <script>
        Swal.fire({
          icon: 'delete',
          title: 'delete',
          text: '@TempData["DeleteMessage"]',
          confirmButtonColor: '#158cba'
        });
    </script>
}



